import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'BottomNav + TabBar',
      theme: ThemeData(primarySwatch: Colors.indigo),
      home: const HomePage(),
      debugShowCheckedModeBanner: false,
    );
  }
}

class HomePage extends StatefulWidget {
  const HomePage({super.key});

  @override
  State<HomePage> createState() => _HomePageState();
}

class _HomePageState extends State<HomePage> {
  int _selectedIndex = 0;

  final List<Widget> _pages = const [
    Module1(),
    Module2WithTabs(),
    Module3(),
  ];

  void _onItemTapped(int index) {
    setState(() {
      _selectedIndex = index;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: _pages[_selectedIndex],
      bottomNavigationBar: BottomNavigationBar(
        currentIndex: _selectedIndex,
        onTap: _onItemTapped,
        items: const [
          BottomNavigationBarItem(icon: Icon(Icons.home), label: "Mód 1"),
          BottomNavigationBarItem(icon: Icon(Icons.tab), label: "Mód 2"),
          BottomNavigationBarItem(icon: Icon(Icons.settings), label: "Mód 3"),
        ],
      ),
    );
  }
}

class Module1 extends StatelessWidget {
  const Module1({super.key});

  @override
  Widget build(BuildContext context) {
    return const Center(
      child: Text("Página do Módulo 1"),
    );
  }
}

class Module2WithTabs extends StatelessWidget {
  const Module2WithTabs({super.key});

  @override
  Widget build(BuildContext context) {
    return DefaultTabController(
      length: 3,
      child: Scaffold(
        appBar: AppBar(
          title: const Text("Módulo 2"),
          bottom: const TabBar(
            tabs: [
              Tab(text: "Aba A"),
              Tab(text: "Aba B"),
              Tab(text: "Aba C"),
            ],
          ),
        ),
        body: const TabBarView(
          children: [
            Center(child: Text("Conteúdo da Aba A")),
            Center(child: Text("Conteúdo da Aba B")),
            Center(child: Text("Conteúdo da Aba C")),
          ],
        ),
      ),
    );
  }
}

class Module3 extends StatelessWidget {
  const Module3({super.key});

  @override
  Widget build(BuildContext context) {
    return const Center(
      child: Text("Página do Módulo 3"),
    );
  }
}
